[Unit]
Description=Ethereum go client
After=syslog.target network.target home-geth.mount

[Service]
User=geth
Group=geth
Environment=HOME=/home/geth
Type=simple
ExecStart=/usr/bin/geth --syncmode full {{ node_add }} --http --config /home/geth/config.toml
KillMode=process
KillSignal=SIGINT
TimeoutStopSec=90
Restart=on-failure
RestartSec=10s

[Install]
WantedBy=multi-user.target
